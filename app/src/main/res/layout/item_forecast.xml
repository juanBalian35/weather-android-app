<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="74dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:background="@drawable/border">
    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView android:id="@+id/image_forecast_daily"
        android:layout_width="32dp"
        android:contentDescription="@string/contentDescription_weather_image"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_min_temp"
        app:layout_constraintTop_toBottomOf="@id/image_forecast_daily"
        />
    <TextView
        android:id="@+id/text_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/text_max_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_max_temp"
        app:layout_constraintBottom_toBottomOf="@id/text_max_temp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>